@using System.Net;
@using Microsoft.AspNetCore.Html
<div class="container ctr">

    <div class="row">
        <div class="col-md-12 ttl" style="margin-bottom: 10px;">
            Top Performing Programs
        </div>
    </div>
    <div class="row">
        <div class="py-5">
            <div class="table-responsive">
                <table class="table table-row-dashed table-row-gray-300 gy-3 lstrw">
                    <tbody>

                    
                        @{
                            int i = 0;
                        }

                        @foreach (var item in ViewBag.ProgramList)
                        {
                            i++;
                            <tr class="">
                                <td>@i</td>
                                <td>
                                    <a class="ProgramLink" asp-route-ProgramUrl="@item.ProgramUrl" asp-action="Index" asp-controller="ProgramPage">@Html.Raw(WebUtility.HtmlDecode(item.Defination))</a>
                                    <input type="hidden" name="ProgramUrl" value="@item.ProgramUrl" />
                                </td>
                                <td class="hard">@item.LevelName</td>
                                <td><i class="fa fa-eye"></i>@item.ProgramView</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>