
@model List<ProgrammingCode.DAL.MST.MST_ProgrammingLangauge.SelectAll_Result>
@{
	var LangaugeList = Model;
}

	<div class="container " style="margin-bottom: 30px;">
		<div class="row d-flex align-items-center">
			<div class="col-lg-6">
				<img src="~/client/assets/media/slider/developer-activity-concept-illustration/4136916.png" height="500px" width="500px">
			</div>
			<div class="col-lg-6 d-flex align-items-center " style="height: 500px;">
				<div class="container ">
					<div class="row">
						<div class="col-lg-12" style="font-size: 30px; font-weight: 600; color: rgb(47, 163, 61);">
							Welcome, Anonymous!
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12" style="font-size: 14px;">
							Welcome to the Programming-Code; Here you will get the best of complex programs, Logic Programs; We focus on sharpening of minds. There are few Examples and Introduction of Languages we will cover up during the journey
						</div>
					</div>
					<div class="separator border-2 my-10"></div>
					<div class="row">
						<div class="col-lg-12" style="font-size: 14px;">
							<button type="button" class="btn btnbg">View Languages</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="container ctr">
		<div class="row">
			@foreach (var item in LangaugeList)
			{
				<div class="col-md-4 p-2">
					<div class="card card-flush">
						<div class="card-header">
							<h3 class="card-title">@item.ProgrammingLangaugeName</h3>
							<div class="card-toolbar">
								512 Solutions
							</div>
						</div>
						<div class="card-body dta dta-sm">
							@item.ProgrammingLangaugeShortDescription.Substring(0, 100)
						</div>
						<div class="card-footer">
							<div class="card-toolbar">
								<button type="button" class="btn btn-sm btnbg">
									Visit Language
								</button>
							</div>
						</div>

					</div>
				</div>
			}
		</div>

	</div>

