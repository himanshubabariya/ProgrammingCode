<div class="container ctr">


    <div class="row">
        <div class="col-md-12 ttl">
            All Programs
        </div>

        <Div class="row">
            <div class="py-5">
                <div class="table-responsive">
                    <table class="table table-row-dashed table-row-gray-300 gy-3 lstrw">
                        <tbody>
                            @{
                                int i = 0;
                            }

                            @foreach (var item in ViewBag.ProgramNavList)
			              {
                                i++;
                            <tr class="">
                                <td>@i</td>
                                <td>
                                        <a class="ProgramLink" asp-route-ProgramID="@item.ProgramID" asp-action="Index" asp-controller="ProgramPage">@Html.Raw(WebUtility.HtmlDecode(item.Defination))</a>
                                        <input type="hidden" name="ProgramID" value="@item.ProgramID" />
                                </td>
                                <td class="hard">@item.LevelName</td>
                                <td class="type">Loop</td>
                                    <td><i class="fa fa-eye"></i>@item.ProgramView</td>
                            </tr>
                            }
                          
                        </tbody>
                    </table>
                </div>
            </div>
        </Div>
    </div>
</div>