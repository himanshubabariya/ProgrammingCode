@using System.Net;
@using Microsoft.AspNetCore.Html
<div class="col-md-12">

	<div class="tab-content" id="myTabContent">
		<div class="tab-pane fade show active" id="kt_tab_pane_4" role="tabpanel">
			<div class="py-5">
				<!--begin::Highlight-->
                @foreach (var item in ViewBag.Solution)
                {
                    <div class="highlight">
                        <button class="highlight-copy btn" data-bs-toggle="tooltip" title="Copy code">copy</button>
                        <div class="highlight-code">
                            <pre class="language-html" style="height:400px; font-size: 20px;">
                            <code class="language-html" style="font-size: 200%;">
                                    @Html.Raw(WebUtility.HtmlDecode(item.ProgramSolution))
         </code>
        </pre>
                        </div>
                    </div>
                }
				<!--end::Highlight-->
			</div>


		</div>

	</div>

</div>
