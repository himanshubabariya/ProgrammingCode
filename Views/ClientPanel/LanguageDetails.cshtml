@using System.Net;
@using Microsoft.AspNetCore.Html
@using ProgrammingCode.DAL;

@foreach (var item in ViewBag.LanguageDetails)
{
    ViewData["MetaTitle"] = item.MetaTitle;
    ViewData["MetaKeywords"] = item.MetaKeywords;
    ViewData["MetaDescription"] = item.MetaDescription;
    ViewData["MetaAuthor"] = item.MetaAuthor;
    ViewData["MetaOgTitle"] = item.MetaOgTitle;
    ViewData["MetaOgImage"] = item.MetaOgImage;
    ViewData["MetaOgDescription"] = item.MetaOgDescription;
    ViewData["MetaOgUrl"] = item.MetaOgUrl;
    ViewData["MetaOgType"] = item.MetaOgType;
    <div class="container ctr">
        <div class="row d-flex align-items-center">

            <div class="col-md-6 d-flex align-items-center ttl">
                <img src="@Url.Content(item.ProgrammingLangaugeLogo)" height="40px" width="40px">
                <span class="p-2">@item.ProgrammingLangaugeName</span>
            </div>
          
                <div class="col-md-6 d-flex justify-content-end" style="color: rgb(47, 163, 61); font-size: 16px;">
                @TempData["SelectSolutionCount"] Solutions
                </div>
            
           
        </div>
        <div class="row">
            <div class="separator border-2 my-5" style="color: rgb(47,163,61);"></div>
        </div>
        <div class="row">

            <div class="col-md-12 dta">
                @Html.Raw(WebUtility.HtmlDecode(item.ProgrammingLangaugeShortDescription))

            </div>
            <div class="col-md-12 dta">
                @Html.Raw(WebUtility.HtmlDecode(item.ProgrammingLangaugeDetailedDescription))

            </div>
        </div>
    </div>
}
<div class="container ctr">


    <div class="row">
        <div class="col-md-12 ttl">
            All Programs
        </div>
        <div class="row">
            <div class="separator border-2 my-5" style="color: rgb(47,163,61);"></div>
        </div>
        <div class="row lstrw">
            <div class="py-5">
                <div class="col-md-12">
                    @{
                        int k = 0;
                    }
                    @foreach (var item in ViewBag.ProgramList)
                    {

                        k++;
                        <div class="row ">
                            <div class="col-md-8">
                                <div class="row">
                                    <div class="col-1 " style="font-weight:900">@k</div>
                                    <div class="col-11 ">
                                        @*<a class="ProgramLink" asp-route-ProgramUrl="@item.ProgramUrl" asp-action="ProgramDetails" asp-controller="ClientPanel">*@
                                        <a class="ProgramLink" href="@ViewBag.LanguageUrl/@item.ProgramUrl/ProgramDetails">@Html.Raw(WebUtility.HtmlDecode(item.Defination))</a>
                                        <input type="hidden" name="ProgramUrl" value="@item.ProgramUrl" />
                                    </div>
                                </div>

                            </div>


                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-1">
                                    </div>
                                    @if (@item.LevelName == "hard")
                                    {
                                        <div class="hard col-3 " style="color:firebrick">@item.LevelName</div>
                                    }
                                    else if (@item.LevelName == "Easy")
                                    {
                                        <div class="hard col-3 " style="color:green">@item.LevelName</div>
                                    }
                                    else
                                    {
                                        <div class="hard col-3 " style="color:darkgoldenrod">@item.LevelName</div>
                                    }

                                    @{
                                        ViewBag.TopicOnProgramUrl = DBConfig.dbTopic.SelectAllByProgramUrl(@item.ProgramUrl);
                                    }
                                    <div class="col-6 pl-2">
                                        @foreach (var item2 in ViewBag.TopicOnProgramUrl)
                                        {
                                            <a class="badge badge-success" href="/Topics/@item2.TopicUrl">
                                                @item2.TopicName
                                                <input type="hidden" name="TopicID" value="@item2.TopicUrl" />
                                            </a>
                                        }


                                    </div>
                                    <div class="col-2 "><i class="fa fa-eye"></i>@item.ProgramView</div>
                                </div>


                            </div>
                        </div>

                        <hr class="dashed" />

                    }



                </div>
            </div>
        </div>
    </div>
</div>
<div class="container ctr">

    <div class="row">
        <div class="col-md-12 ttl" style="margin-bottom: 10px;">
            Top Performing Programs
        </div>
    </div>
    <div class="row">
        <div class="separator border-2 my-5" style="color: rgb(47,163,61);"></div>
    </div>
    <div class="row lstrw">
        <div class="py-5">
            <div class="col-md-12">
                @{
                    int j = 0;
                }
                @foreach (var item in ViewBag.TopProgramList)
                {

                    j++;
                    <div class="row ">
                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-1" style="font-weight:900">@j</div>
                                <div class="col-11 ">
                                    @*<a class="ProgramLink" asp-route-ProgramUrl="@item.ProgramUrl" asp-action="ProgramDetails" asp-controller="ClientPanel">*@
                                    <a class="ProgramLink" href="@ViewBag.LanguageUrl/@item.ProgramUrl/ProgramDetails">@Html.Raw(WebUtility.HtmlDecode(item.Defination))</a>
                                    <input type="hidden" name="ProgramUrl" value="@item.ProgramUrl" />
                                </div>
                            </div>

                        </div>


                        <div class="col-md-2">
                            <div class="row">
                                <div class="col-1">
                                </div>
                                @if (@item.LevelName == "hard")
                                {
                                    <div class="hard col-7 " style="color:firebrick">@item.LevelName</div>
                                }
                                else if (@item.LevelName == "Easy")
                                {
                                    <div class="hard col-7 " style="color:green">@item.LevelName</div>
                                }
                                else
                                {
                                    <div class="hard col-7 " style="color:darkgoldenrod">@item.LevelName</div>
                                }
                               
                                <div class="col-3"><i class="fa fa-eye"></i>@item.ProgramView</div>
                            </div>


                        </div>
                    </div>

                    <hr class="dashed" />

                }



            </div>
        </div>
    </div>
</div>
