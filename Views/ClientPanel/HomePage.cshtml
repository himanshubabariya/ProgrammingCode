</div>



<div class="container">
	<div class="row">
		@foreach (var item in ViewBag.LanguageList)
		{
			<div class="col-md-4 pt-3">
				<div class="card card-flush">
					<div class="card-header">
						@**@
						<h3 class="card-title"><a href="@item.LanguageUrl/PN=1" style="color:black;font-weight:500"><span><img src="@Url.Content(item.ProgrammingLangaugeLogo)" height="30px" width="30px"> @item.ProgrammingLangaugeName</span></a></h3>
