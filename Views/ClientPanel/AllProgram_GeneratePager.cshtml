@model ProgrammingCode.BAL.PagedListPagerModel;
@if(ViewBag.TopicUrl==null)
{
    <div class="row">
    <div class="col-md-12">
        <!-- pager -->
        <script>
            console.log(@Model.EndPageNo)
        </script>
            @if (Model.EndPageNo >= 1)
        {
            <div class="btn-group btn-group-sm">
                    <script>console.log(@Model.CurrentPageNo)</script>
                    @if (Model.CurrentPageNo > 1)
                {
                        <form id="List" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#ProgramList"
                              data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);" asp-action="ProgramListAllProgram" asp-controller="ClientPanel" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="PN" value="1" />
                        <button type="submit" class="pager-item btn btn-primary g-py-4 ">
                            <i class="la la-angle-double-left pt-3"></i>
                        </button>
                    </form>
                        <form id="List" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#ProgramList"
                              data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);" asp-action="ProgramListAllProgram" asp-controller="ClientPanel" style="display: inline;">
                        @Html.AntiForgeryToken()
                            <input type="hidden" name="PN" value="@(Model.CurrentPageNo-1)" />
                        <button type="submit" class="pager-item btn g-py-4">
                            <i class="la la-angle-left pt-3"></i>
                        </button>
                    </form>   
                }
                    @for (int pageNo = Model.StartPageNo; pageNo <= Model.EndPageNo; pageNo++)
                {

                        <form id="List" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#ProgramList"
                              data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);" asp-action="ProgramListAllProgram" asp-controller="ClientPanel" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="PN" value="@pageNo" />
                            <button type="submit" class="pager-item btn g-py-4 @(pageNo == Model.CurrentPageNo ? " btn-brand" : "btn-secondary" )">
                            @pageNo
                        </button>
                    </form>
                }
                    @if (Model.CurrentPageNo < Model.TotalPages)
                {
                        <form id="List" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#ProgramList"
                              data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);" asp-action="ProgramListAllProgram" asp-controller="ClientPanel" style="display: inline;">
                        @Html.AntiForgeryToken()
                            <input type="hidden" name="PN" value="@(Model.CurrentPageNo+1)" />
                        <button type="submit" class="pager-item btn g-py-4 ">
                            <i class="la la-angle-right pt-3"></i>
                        </button>
                    </form>
                        <form id="List" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#ProgramList"
                              data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);" asp-action="ProgramListAllProgram" asp-controller="ClientPanel" style="display: inline;">
                        @Html.AntiForgeryToken()
                            <input type="hidden" name="PN" value="@Model.TotalPages" />
                        <button type="submit" class="pager-item btn g-py-4 ">
                            <i class="la la-angle-double-right pt-3"></i>
                        </button>
                    </form>
                }
            </div>
        }
    </div>
</div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <!-- pager -->
            <script>
                console.log(@Model.EndPageNo)
