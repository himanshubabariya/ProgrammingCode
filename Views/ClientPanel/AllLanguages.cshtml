@using System.Net;
@using Microsoft.AspNetCore.Html
@using ProgrammingCode.DAL;
@{
	ViewData["MetaTitle"] = "ProgrammingCode Languages";
	ViewData["MetaKeywords"] = "ProgrammingCode Languages";
	ViewData["MetaDescription"] = "ProgrammingCode Languages";
	ViewData["MetaAuthor"] = "ProgrammingCode Languages";
	ViewData["MetaOgTitle"] = "ProgrammingCode Languages";
	ViewData["MetaOgImage"] = "ProgrammingCode Languages";
	ViewData["MetaOgDescription"] = "ProgrammingCode Languages";
	ViewData["MetaOgUrl"] = "ProgrammingCode Languages";
	ViewData["MetaOgType"] = "ProgrammingCode Languages";
}
<div class="container">
	<div class="row">
		@foreach (var item in ViewBag.AllLanguages)
		{
			<div class="col-md-4 pt-3">
				<div class="card card-flush">
					<div class="card-header">
						<h3 class="card-title"><a href="@item.LanguageUrl" style="color:black;font-weight:500"><span><img src="@Url.Content(item.ProgrammingLangaugeLogo)" height="30px" width="30px"> @item.ProgrammingLangaugeName</span></a></h3>
						
							
						@{
							int SolutionCount = DBConfig.dbSolution.SelectSolutionCount(@item.LanguageUrl);
						}

						
						
						<div class="card-toolbar">
							@SolutionCount Solutions
						</div>
					</div>

					<div class="card-body dta dta-sm">
						@Html.Raw(WebUtility.HtmlDecode(item.ProgrammingLangaugeShortDescription.Length > 200 ? item.ProgrammingLangaugeShortDescription.Substring(0, 200) + "....." : item.ProgrammingLangaugeShortDescription))
					</div>
					<div class="card-footer">
						<div class="card-toolbar">
							@*<button type="button" class="">*@
							@*<a class="btn btn-sm btnbg"
						asp-route-LanguageUrl="@item.LanguageUrl" asp-action="LanguageDetails" asp-controller="ClientPanel">*@
							<a class="btn btn-sm btnbg"
							   href="@item.LanguageUrl">
								more..
								<input type="hidden" name="LanguageUrl" value="@item.LanguageUrl/PN=1" />
							</a>
							@*</button>*@
						</div>
					</div>

				</div>
			</div>
		}
	</div>

</div>

