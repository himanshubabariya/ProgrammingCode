<div class="container ctr">


    <div class="row">
        <div class="col-md-12 ttl">
            All Topics
        </div>

        <Div class="row">
            <div class="py-5">
                <div class="table-responsive">
                    <table class="table table-row-dashed table-row-gray-300 gy-3 lstrw">
                        <tbody>
                            @{
                                int i = 0;
                            }

                            @foreach (var item in ViewBag.TopicList)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        <a class="ProgramLink" href="/Topics/@item.TopicUrl">@item.TopicName</a>
                                        <input type="hidden" name="TopicID" value="@item.TopicID" />
                                    </td>
                                    @{
                                        int SelectCountByTopicUrl = DBConfig.dbProgram.SelectCountByTopicUrl(@item.TopicUrl);
                                    }
                                    <td class="type">
                                
                                        @SelectCountByTopicUrl Programs
                                  
                                    </td>
                                    <td><i class="fa fa-eye"></i>@item.TopicView</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </Div>
    </div>
</div>