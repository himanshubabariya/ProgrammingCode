@using System.Net;
@using Microsoft.AspNetCore.Html
@using ProgrammingCode.DAL;
@*@model List<ProgrammingCode.DAL.PRO.PRO_Program.SelectAll_Result>
@{
	var ProgramList = Model;
}*@
@{
    ViewData["MetaTitle"] = "ProgrammingCode Programs";
    ViewData["MetaKeywords"] = "ProgrammingCode Programs";
    ViewData["MetaDescription"] = "ProgrammingCode Programs";
    ViewData["MetaAuthor"] = "ProgrammingCode Programs";
    ViewData["MetaOgTitle"] = "ProgrammingCode Programs";
    ViewData["MetaOgImage"] = "ProgrammingCode Programs";
    ViewData["MetaOgDescription"] = "ProgrammingCode Programs";
    ViewData["MetaOgUrl"] = "ProgrammingCode Programs";
    ViewData["MetaOgType"] = "ProgrammingCode Programs";
}



   
<div class="container ctr">
    <div class="row">
        <div class="col-md-12 ttl">
            All Programs
        </div>
        <div class="row">
            <div class="separator border-2 my-5" style="color: rgb(47,163,61);"></div>
        </div>
        <div class="row lstrw">
            <div class="py-5">  
                <div class="col-md-12">      
                    @{
                        int k = 0;
                    }
                   @foreach (var item in ViewBag.ProgramNavList)
                            {

                       k++;
                        <div class="row ">
                            <div class="col-md-8">
                                <div class="row">
                                    <div class="col-1 " style="font-weight:900">@k</div>
                                    <div class="col-11 ">
                                        @*<a class="ProgramLink" asp-route-ProgramUrl="@item.ProgramUrl" asp-action="ProgramDetails" asp-controller="ClientPanel">*@
                                        <a class="ProgramLink" href="/@item.ProgramUrl/ProgramDetails">@Html.Raw(WebUtility.HtmlDecode(item.Defination))</a>
                                        <input type="hidden" name="ProgramUrl" value="@item.ProgramUrl" />
                                    </div>
                                </div>
                                
                            </div>

                            
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-1">
                                        </div>
                                    @if(@item.LevelName=="Hard")
                                    {
                                        <div class="col-3 "><span class="badge badge-danger">@item.LevelName</span></div>
                                    }
                                    else if (@item.LevelName == "Easy")
                                    {
                                        <div class=" col-3 "><span class="badge badge-primary">@item.LevelName</span></div>
                                    }
                                    else if (@item.LevelName == "School")
                                    {
                                        <div class=" col-3 "><span class="badge badge-dark">@item.LevelName</span></div>
                                    }
                                    else
                                    {
                                        <div class=" col-3 "><span class="badge badge-warning">@item.LevelName</span></div>
                                    }

                                    @{
                                        ViewBag.TopicOnProgramUrl = DBConfig.dbTopic.SelectAllByProgramUrl(@item.ProgramUrl);
                                    }
                                    <div class="col-6 pl-2">
                                        @foreach (var item2 in ViewBag.TopicOnProgramUrl)
                                        {
                                            <a class="badge badge-success" href="/Topics/@item2.TopicUrl">
                                                @item2.TopicName
                                                <input type="hidden" name="TopicID" value="@item2.TopicUrl" />
                                            </a>
                                        }


                                    </div>
                                    <div class="col-2 "><i class="fa fa-eye"></i>@item.ProgramView</div>
                                            </div>
                             

                            </div>
                                    </div>
                                
                    <hr class="dashed" />
                               
                            }

                       
        
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container ctr">

    <div class="row">
        <div class="col-md-12 ttl" style="margin-bottom: 10px;">
            Top Performing Programs
        </div>
    </div>
    <div class="row">
        <div class="separator border-2 my-5" style="color: rgb(47,163,61);"></div>
    </div>
    <div class="row lstrw">
        <div class="py-5">
            <div class="col-md-12">
                @{
                    int j = 0;
                }
                @foreach (var item in ViewBag.TopProgramNavList)
                {

                    j++;
                    <div class="row ">
                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-1" style="font-weight:900">@j</div>
                                <div class="col-11 ">
                                    @*<a class="ProgramLink" asp-route-ProgramUrl="@item.ProgramUrl" asp-action="ProgramDetails" asp-controller="ClientPanel">*@
                                    <a class="ProgramLink" href="/@item.ProgramUrl/ProgramDetails">@Html.Raw(WebUtility.HtmlDecode(item.Defination))</a>
                                    <input type="hidden" name="ProgramUrl" value="@item.ProgramUrl" />
                                </div>
                            </div>

                        </div>


                        <div class="col-md-2">
                            <div class="row">
                                <div class="col-1">
                                </div>
                                @if (@item.LevelName == "Hard")
                                {
                                    <div class="col-7 "><span class="badge badge-danger">@item.LevelName</span></div>
                                }
                                else if (@item.LevelName == "Easy")
                                {
                                    <div class=" col-7 "><span class="badge badge-primary">@item.LevelName</span></div>
                                }
                                else if (@item.LevelName == "School")
                                {
                                    <div class=" col-7 "><span class="badge badge-dark">@item.LevelName</span></div>
                                }
                                else
                                {
                                    <div class=" col-7 "><span class="badge badge-warning">@item.LevelName</span></div>
                                }


                                @{
                                    ViewBag.TopicOnProgramUrl = DBConfig.dbTopic.SelectAllByProgramUrl(@item.ProgramUrl);
                                }

                                <div class="col-3"><i class="fa fa-eye"></i>@item.ProgramView</div>
                            </div>


                        </div>
                    </div>

                    <hr class="dashed" />

                }



            </div>
        </div>
    </div>
</div>