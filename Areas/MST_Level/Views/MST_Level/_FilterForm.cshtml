@model ProgrammingCode.Areas.MST_Level.Models.MST_LevelModel

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">
            <span class="me-2"><i class="fa fa-search"></i></span> Search
            <small></small>
        </h3>
 
    </div>
    <div class="card-body">
        <form id="filterForm" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#SearchResult"
              data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);"
              asp-action="_SearchResult" asp-controller="MST_Level" novalidate="novalidate" asp-area="MST_Level" >
            @Html.AntiForgeryToken()

            <div class="row">
               
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="text-dark"><i class="fa fa-search"></i> Level</label>
                        <div class="input-group">
                                <select class="form-select form-select-sm" data-allow-clear="true" tabindex="-1" asp-for="LevelID" asp-items="@(new SelectList(ViewBag.levelcomboList,"LevelID","LevelName"))" data-control="select2" data-placeholder="Select Level">
                                <option class="text-black-50">Select Level</option>

                                </select>
                        </div>
                        @Html.ValidationMessageFor(m => m.LevelID, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
                </div>
            
            <hr />
            
            <input type="submit" value="Submit" class="btn btn-success btn-sm" />
        </form>
    </div>
</div>