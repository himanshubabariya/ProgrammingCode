@model ASPNetCore6_Demo.Models.UMSModel

<div class="modal-header">
    <h4 class="modal-title">@ViewBag.Action Demo</h4>
    <button type="button" class="btn btn-danger btn-elevate btn-icon btn-sm" data-bs-dismiss="modal" aria-label="Close">
        <i class="fa fa-close"></i>
    </button>
</div>

<div class="modal-body">
    <form id="formAddEditSave_UMS" data-ajax="true" data-ajax-method="post"
          data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);"
          asp-action="_Save" asp-controller="UMS">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.DemoID)

        <div class="form-group row">
            <label class="col-md-4 col-form-label">First Name</label>
            <div class="col-md-5">
                @*@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder="Enter First Name"})*@
                <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Middle Name</label>
            <div class="col-md-5">
                @*@Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control", placeholder="Enter Middle Name"})*@
                <input type="text" asp-for="MiddleName" class="form-control" placeholder="Enter First Name" />
                @Html.ValidationMessageFor(m => m.MiddleName, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Last Name</label>
            <div class="col-md-5">
                @*@Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder="Enter Last Name"})*@
                <input type="text" asp-for="LastName" class="form-control" placeholder="Enter First Name" />
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <hr class="form-button-divider" />
        <div class="row">
            <div class="offset-md-4 col-md-8">
                <input type="submit" value="Save" class="btn btn-primary btn-sm js-btn-modal-form-submit" />
                <button type="button" class="btn btn-light btn-sm" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </form>
</div>