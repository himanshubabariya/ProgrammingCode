<div class="card shadow-sm mt-5">
    <div class="card-header">
        <h3 class="card-title">Search Result</h3>
        <div class="card-toolbar">
            <button class="btn btn-sm btn-success js-stkModal-btn ms-1"
                    data-form-id="formAdd_UMS"
                    data-url='@Url.Action("_AddEdit", "SEC_User", new {Area = "SEC_User"})'
                    data-modal-size="lg">
                <i class="la la-plus"></i> Add New
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="tblList" cellspacing="0" width="100%" style="border: 1px solid #ccc;">
                <thead class="bg-gray-300">
                    <tr>
                        <th class="text-center" style="border: 1px solid #ccc;">Actions</th>
                        <th class="text-center" style="border: 1px solid #ccc;">UserName</th>
                        <th class="text-center" style="border: 1px solid #ccc;">Password</th>
                        <th class="text-center" style="border: 1px solid #ccc;">Email</th>
                        <th class="text-center" style="border: 1px solid #ccc;">DisplayName</th>
                        <th class="text-center" style="border: 1px solid #ccc;">MobileNo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center" style="border: 1px solid #ccc;">
                                <span data-bs-toggle="tooltip" data-bs-placement="left" title="Edit">
                                    <button class="btn btn-primary btn-icon btn-elevate btn-sm js-stkModal-btn"
                                            data-form-id="formEdit_UMS"
                                            data-url='@Url.Action("_AddEdit", "SEC_User", new {Area = "SEC_User", UserID = item.UserID})'
                                            data-modal-size="lg">
                                        <i class="la la-edit"></i>
                                    </button>
                                </span>
                                <form id="formDelete_UMS" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#SearchResult"
                                      data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);"
                                      asp-area="SEC_User" asp-action="_Delete" asp-controller="SEC_User" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="UserID" value="@item.UserID" />
                                    <a class="btn btn-danger btn-icon btn-elevate btn-sm js-bb-confirm-delete" data-bs-toggle="tooltip" data-bs-placement="left" title="Delete">
                                        <i class="la la-trash"></i>
                                    </a>
                                </form>
                            </td>
                            <td class="text-center" style="border: 1px solid #ccc;">@item.UserName</td>
                            <td class="text-center" style="border: 1px solid #ccc;">@item.Password</td>
                            <td class="text-center" style="border: 1px solid #ccc;">@item.Email</td>
                            <td class="text-center" style="border: 1px solid #ccc;">@item.DisplayName</td>
                            <td class="text-center" style="border: 1px solid #ccc;">@item.MobileNo</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
