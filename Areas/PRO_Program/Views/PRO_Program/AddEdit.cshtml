                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ProgramID)
                <div class="form-group row">
                    <div class="col-md-4">

                        <label class="required col-md-4 col-form-label"> Program Number</label>

                        <input type="number"  asp-for="ProgramNumber" class="form-control" placeholder="Enter Program Number" required>
                        @Html.ValidationMessageFor(m => m.ProgramNumber, "", new { @class = "form-text text-danger" })
                    </div>
                    <div class="col-md-4">
                    <label class=" required  col-md-4 col-form-label "> Level</label>
              
                        @Html.DropDownList("LevelID", new SelectList(ViewBag.LevelcomboList,"LevelID","LevelName"), "select Level",  new {@class="form-select form-select-sm "})
               
                        @Html.ValidationMessageFor(m => m.LevelID, "", new { @class = "form-text text-danger" })
                    </div>
                     @if (Model != null && Model.ProgramID != 0)
                    {
                        var preselectedTopicIDs = ViewBag.PreselectedTopicIDs as List<int>;
                        Model.arrtopic = preselectedTopicIDs.ToArray();
                    }
                  
                 
                    <div class="col-md-4">
                        <label class="required col-md-4 col-form-label">Topic</label>
                        @Html.ListBoxFor(
                        m => m.arrtopic,
                        new SelectList(ViewBag.topiccomboList, "TopicID", "TopicName"),
                        new
                        {
                        @class = "form-select form-select-sm select2-accessible",
                        data_control = "select2",
                        data_placeholder = "Select Topic",
                        data_allow_clear = "true",
                        multiple = "multiple",
                        data_select2_id = "select2-data-12-kpd1",
                        tabindex = "-1",
                        aria_hidden = "true",
                        
                        }
                        )
