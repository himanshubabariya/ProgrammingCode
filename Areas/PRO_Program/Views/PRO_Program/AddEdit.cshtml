                                data-allow-clear="true" multiple="" id="myDropdown"
                                data-select2-id="select2-data-12-kpd1" tabindex="-1" asp-for="topics_Selected"
                                aria-hidden="true" asp-items="@(new SelectList(ViewBag.topiccomboList,"TopicID","TopicName"))">           
                        </select>*@
