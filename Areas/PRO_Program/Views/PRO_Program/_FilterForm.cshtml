@model ProgrammingCode.Areas.PRO_Program.Models.PRO_ProgramModel

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title fw-bolder">
            <span class="me-2"><i class="fa fa-search"></i></span> Search
            <small></small>
        </h3>
 
    </div>
    <div class="card-body">
        <form id="filterForm" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#SearchResult"
              data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);"
              asp-action="_SearchResult" asp-controller="PRO_Program" novalidate="novalidate" asp-area="PRO_Program">
            @Html.AntiForgeryToken()

            <div class="row">
                  <div class="col-md-4">
                    <div class="form-group" >
                        <label class="text-dark">Program</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-search"></i></span>
                             <input type="text" asp-for="F_Defination" class="form-control" placeholder="Enter Program Defination " autofocus />
                        </div>
                        
                    </div>
                    </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="text-dark">Program Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-search"></i></span>
                            <input type="text" asp-for="F_ProgramNumber" class="form-control" placeholder="Enter ProgramNumber" autofocus />
                        </div>

                    </div>
                </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label> Level</label>
                            <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-search"></i></span>
                                <div class="overflow-hidden flex-grow-1">
                                    <select class="form-select form-select-sm " data-allow-clear="true" tabindex="-1" asp-for="F_LevelID" asp-items="@(new SelectList(ViewBag.levelcomboList,"LevelID","LevelName"))" data-control="select2" data-placeholder="Select Level">
                                        <option>Select Level</option>
                                    </select>
                                </div>

                            </div>

                        </div>
                    </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label> Topic</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-search"></i></span>
                            <div class="overflow-hidden flex-grow-1">
                                <select class="form-select form-select-sm " data-allow-clear="true" tabindex="-1" asp-for="F_TopicID" asp-items="@(new SelectList(ViewBag.topiccomboList,"TopicID","TopicName"))" data-control="select2" data-placeholder="Select Topic">
                                    <option>Select Topic</option>
                                </select>
                            </div>

                        </div>

                    </div>
                </div>
                </div>

 
                 
           

            <hr />
            
            <input type="submit" value="Submit" class="btn btn-success btn-sm" />
        </form>
    </div>
</div>