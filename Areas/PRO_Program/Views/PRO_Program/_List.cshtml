@model List<ProgrammingCode.DAL.PRO.PRO_Program.SelectAll_Result>

<div class="card bg-light shadow-sm mt-5">
    <div class="card-header">
        <h3 class="card-title">
            <i class="bi bi-box fs-3"></i>
            &nbsp; Program
            
        </h3>
        <div class="card-toolbar">

            <button class="btn btn-sm btn-success js-stkModal-btn ms-1"
                    data-form-id="formAdd_UMS"
                    data-url='@Url.Action("_AddEdit", "PRO_Program", new {Area = "PRO_Program"})'
                    data-modal-size="lg">
                <i class="la la-plus"></i> Add New
            </button>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover" id="tblList" cellspacing="0" width="100%">
            <thead class="bg-gray-300">
                <tr>
                    <th class="text-center">Sr.</th>
                    <th class="text-right">ProgramID</th>
                    <th class="">ProgramNumber </th>
                    <th class="">Defination </th>
                    <th class="">Program Desecription </th>
                    <th class="">Algoritham</th>
                    <th class="">Description</th>
                    <th class="">Uesr</th>
                    <th class="">Sequence</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                }
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td class="text-center"><span data-toggle="kt-tooltip" data-placement="right" data-original-title="">@i</span></td>
                        <td class="text-right">@item.ProgramID</td>
                        <td class="">@item.ProgramNumber</td>
                        <td class="">@item.Defination</td>
                        <td class="">@item.ProgramDesecription</td>
                        <td class="">@item.Algoritham</td>
                        <td class="">@item.Description</td>
                        <td class="">@item.UserName</td>
                        <td class="">@item.Sequence</td>

                        <td class="text-center">

                            <span data-bs-toggle="tooltip" data-bs-placement="left" title="Edit">
                                <button class="btn btn-primary btn-icon btn-elevate btn-sm js-stkModal-btn"
                                    data-form-id="formEdit_UMS"
                                    data-url='@Url.Action("_AddEdit", "PRO_Program", new {Area = "PRO_Program", ProgramID = item.ProgramID})'
                                    data-modal-size="lg">
                                    <i class="la la-edit"></i>
                                </button>
                            </span>

                            <form id="formDelete_UMS" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#SearchResult"
                              data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);"
                              asp-area="PRO_Program" asp-action="_Delete" asp-controller="PRO_Program" style="display: inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="ProgramID" value="@item.ProgramID" />
                                <a class="btn btn-danger btn-icon btn-elevate btn-sm js-bb-confirm-delete" data-bs-toggle="tooltip" data-bs-placement="left" title="Delete"><i class="la la-trash"></i></a>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>