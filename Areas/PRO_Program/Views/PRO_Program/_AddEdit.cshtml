        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label p-4">Sequence</label>
            <div class="col-md-5">

                <input type="text" asp-for="Sequence" class="form-control" placeholder="Sequnce" />
                @Html.ValidationMessageFor(m => m.Sequence, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label p-4">Meta Title</label>
            <div class="col-md-4">

                <input type="text" asp-for="MetaTitle" class="form-control" />
                @Html.ValidationMessageFor(m => m.MetaTitle, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label p-4 ">Meta Keywords</label>
            <div class="col-md-5">

                <input type="text" asp-for="MetaKeywords" class="form-control"  />
                @Html.ValidationMessageFor(m => m.MetaKeywords, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label p-4">Meta Description</label>
            <div class="col-md-5">

                <input type="text" asp-for="MetaDescription" class="form-control"  />
                @Html.ValidationMessageFor(m => m.MetaDescription, "", new { @class = "form-text text-danger" })
            </div>
        </div>
         <div class="form-group row">
            <label class="col-md-4 col-form-label p-4">Meta Author</label>
            <div class="col-md-5">

                <input type="text" asp-for="MetaAuthor" class="form-control" />
                @Html.ValidationMessageFor(m => m.MetaAuthor, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
