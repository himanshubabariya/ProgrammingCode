@model ProgrammingCode.Areas.PRO_Program.Models.PRO_ProgramModel                        
<div class="modal-header">
    <h4 class="modal-title">@ViewBag.Action Page</h4>
    <button type="button" class="btn btn-danger btn-elevate btn-icon btn-sm" data-bs-dismiss="modal" aria-label="Close">
        <i class="fa fa-close"></i>
    </button>
</div>

<div class="modal-body">
    <form id="formAddEditSave_UMS" data-ajax="true" data-ajax-method="post"
          data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);"
          asp-area="PRO_Program" asp-action="_Save" asp-controller="PRO_Program">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ProgramID) 

        <div class="form-group row">
            <label class="col-md-4 col-form-label "> Level</label>
        <div class="col-md-5">

                <select class="form-select form-select-sm form-select-solid" asp-for="LevelID" asp-items="@(new SelectList(ViewBag.levelcomboList,"LevelID","LevelName"))" data-control="select2" data-placeholder="Select Level">
            <option>select Level</option>

            </select>
                @Html.ValidationMessageFor(m => m.LevelID, "", new { @class = "form-text text-danger" })
        </div>
          
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label p-4 "> Defination</label>
            <div class="col-md-5">
                
                <textarea type="text" asp-for="Defination" class="form-control" placeholder="Enter Defination" ></textarea>
                @Html.ValidationMessageFor(m => m.Defination, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label p-4 "> Program Number</label>
            <div class="col-md-5">

                <textarea type="text" asp-for="ProgramNumber" class="form-control" placeholder="Enter Program Number"></textarea>
                @Html.ValidationMessageFor(m => m.ProgramNumber, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label p-4"> Program Description</label>
            <div class="col-md-5">
                <textarea type="text" asp-for="ProgramDesecription" class="form-control" placeholder="Enter Program Description" ></textarea>
                @Html.ValidationMessageFor(m => m.ProgramDesecription , "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label p-4 pt-1"> Algoritham  </label>
            <div class="col-md-5">

                <input type="text" asp-for="Algoritham" class="form-control" placeholder="Algoritham   " />
                @Html.ValidationMessageFor(m => m.Algoritham, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label p-4 pt-1"> Program url  </label>
            <div class="col-md-5">

                <input type="text" asp-for="ProgramUrl" class="form-control" placeholder="ProgramUrl   " />
                @Html.ValidationMessageFor(m => m.ProgramUrl, "", new { @class = "form-text text-danger" })
